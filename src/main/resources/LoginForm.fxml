<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="pneLoginForm" prefHeight="400.0" prefWidth="600.0" stylesheets="@/css/loginform.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginFormController">
   <children>
      <Label alignment="CENTER" layoutY="35.0" text="LOGIN" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <font>
            <Font name="DejaVu Sans Bold" size="29.0" />
         </font>
      </Label>
      <HBox alignment="TOP_CENTER" layoutY="84.0" spacing="10.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <children>
            <Label alignment="CENTER" text="Don't  have an account?">
               <font>
                  <Font name="Cantarell Light" size="20.0" />
               </font>
            </Label>
            <Label id="lblRegisterHere" fx:id="lblRegisterHere" alignment="CENTER" layoutX="10.0" layoutY="10.0" onMouseClicked="#lblRegisterHere_OnMenuClicked" text="Register Here" textFill="#0085f2">
               <font>
                  <Font name="Cantarell Extra Bold" size="20.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Label>
         </children>
      </HBox>
      <HBox layoutX="130.0" layoutY="139.0" AnchorPane.leftAnchor="100.0">
         <children>
            <Label text="NIC Number " />
            <Label layoutX="10.0" layoutY="10.0" text="*" textFill="RED" />
         </children>
      </HBox>
      <TextField fx:id="txtNIC" layoutX="35.0" layoutY="163.0" prefHeight="26.0" prefWidth="369.0" promptText="Ex: 895174562V" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0" />
      <Button id="btnLogin" fx:id="btnLogin" layoutX="270.0" layoutY="207.0" mnemonicParsing="false" onAction="#btnLogin_OnAction" prefHeight="35.0" prefWidth="74.0" style="-fx-background-color: rgb(0,137,247);" text="LOGIN" textFill="WHITE">
         <font>
            <Font size="16.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
   </children>
</AnchorPane>
