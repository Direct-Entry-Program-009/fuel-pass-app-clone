<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="neRegisterForm" prefHeight="410.0" prefWidth="600.0" stylesheets="@/css/registerform.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.RegisterFormController">
   <children>
      <VBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="148.0" prefHeight="88.0" prefWidth="550.0" spacing="10.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
         <children>
            <HBox>
               <children>
                  <Label text="NIC Number " />
                  <Label layoutX="10.0" layoutY="10.0" text="*" textFill="RED" />
               </children>
            </HBox>
            <TextField fx:id="txtNIC" prefHeight="26.0" prefWidth="530.0" promptText="Ex: 895174562V" />
            <Label fx:id="lblNicStatus" text="Please Enter Valid NIC to Proceed">
               <font>
                  <Font size="10.0" />
               </font></Label>
            <HBox spacing="20.0">
               <children>
                  <AnchorPane HBox.hgrow="ALWAYS">
                     <children>
                        <HBox>
                           <children>
                              <Label text="First Name " />
                              <Label text="*" textFill="RED" />
                           </children>
                        </HBox>
                        <TextField fx:id="txtFirstName" disable="true" layoutY="22.0" prefHeight="26.0" prefWidth="316.0" promptText="Ex: Saman " AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" />
                     </children>
                  </AnchorPane>
                  <AnchorPane HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Last Name" />
                        <TextField fx:id="txtLastName" disable="true" layoutY="21.0" prefHeight="26.0" prefWidth="316.0" promptText="Ex: Senarathna" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" />
                     </children>
                  </AnchorPane>
               </children>
            </HBox>
            <HBox>
               <children>
                  <Label text="Address " />
                  <Label layoutX="10.0" layoutY="10.0" text="*" textFill="RED" />
               </children>
            </HBox>
            <TextField fx:id="txtAddress" disable="true" layoutX="10.0" layoutY="28.0" prefHeight="26.0" prefWidth="530.0" promptText="Ex: 89/2, Hirana Road, Panadura" />
         </children>
      </VBox>
      <Label alignment="CENTER" layoutY="21.0" text="REGISTRATION" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <font>
            <Font name="DejaVu Sans Bold" size="26.0" />
         </font>
      </Label>
      <HBox alignment="TOP_CENTER" layoutY="64.0" spacing="10.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <children>
            <Label alignment="CENTER" text="Already have an account?">
               <font>
                  <Font name="Cantarell Light" size="20.0" />
               </font>
            </Label>
            <Label id="txtLoginHere" fx:id="txtLoginHere" alignment="CENTER" layoutX="10.0" layoutY="10.0" onMouseClicked="#txtLoginHere_OnMenuClicked" text="Login Here" textFill="#0085f2">
               <font>
                  <Font name="Cantarell Extra Bold" size="20.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Label>
         </children>
      </HBox>
      <Label alignment="CENTER" layoutX="26.0" layoutY="103.0" text="Personal Details" AnchorPane.leftAnchor="20.0">
         <font>
            <Font name="DejaVu Sans Condensed Bold" size="18.0" />
         </font>
      </Label>
      <Button id="btnRegister" fx:id="btnRegister" disable="true" layoutX="20.0" layoutY="365.0" mnemonicParsing="false" prefHeight="31.0" prefWidth="103.0" style="-fx-background-color: rgba(0,137,247,1);" text="Register" textFill="WHITE" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="365.0">
         <font>
            <Font name="DejaVu Sans Bold" size="13.0" />
         </font>
      </Button>
      <AnchorPane layoutX="14.0" layoutY="129.0" prefHeight="4.0" prefWidth="200.0" style="-fx-background-color: rgb(0,130,247);" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" />
   </children>
</AnchorPane>
